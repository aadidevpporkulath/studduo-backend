# Google Gemini API (Get from https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_gemini_api_key_here

# Firebase Admin SDK
FIREBASE_PROJECT_ID=your_firebase_project_id
# For production on Linux, consider an absolute path (e.g., /etc/studduoai/firebase-credentials.json)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Application Settings
# For local dev
APP_ENV=development
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# For production, uncomment and set appropriate origins
# APP_ENV=production
# ALLOWED_ORIGINS=https://your-frontend.example

# Database
# Keep in sync with config.py default
DATABASE_URL=sqlite+aiosqlite:///./studduoai.db

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db

# Knowledge directory for PDFs
KNOWLEDGE_DIR=./knowledge

# PDF Processing
# Windows default
TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
# Linux example
# TESSERACT_CMD=/usr/bin/tesseract

# LLM settings (optional; defaults exist in config)
MODEL_NAME=gemini-pro
TEMPERATURE=0.7
MAX_TOKENS=8192
